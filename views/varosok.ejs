<!DOCTYPE HTML>
<html lang="hu">

<head>
    <title>Haló</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="/landed/assets/css/main.css" />
    <noscript>
        <link rel="stylesheet" href="/landed/assets/css/noscript.css" />
    </noscript>

    <style>
        :root {
            --accent: #e5474b;
        }

        .tabla-valaszto {
            text-align: center;
            padding: 3rem 1rem 1.5rem;
            background: linear-gradient(135deg, rgba(229, 71, 75, 0.08), transparent);
            border-bottom: 1px solid rgba(229, 71, 75, 0.2);
            margin-bottom: 2rem;
        }

        .tabla-valaszto select {
            padding: 16px 32px;
            font-size: 1.5rem;
            font-weight: bold;
            color: var(--accent);
            background: white;
            border: 4px solid var(--accent);
            border-radius: 16px;
            min-width: 320px;
            box-shadow: 0 10px 30px rgba(229, 71, 75, 0.15);
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .tabla-valaszto select:hover {
            transform: translateY(-3px);
        }

        .tabla-info {
            text-align: center;
            margin: 1.5rem 0 3rem;
        }

        .tabla-info h2 {
            margin: 0 0 0.8rem;
            color: white;
            font-weight: 400;
            font-size: 2.2rem;
        }

        .tabla-info .page-info {
            font-size: 1.2rem;
            color: #aaa;
        }

        .tabla-info .page-info strong {
            color: var(--accent);
            font-size: 1.4rem;
        }

        table th {
            background: rgba(229, 71, 75, 0.18) !important;
            color: white !important;
            cursor: pointer;
        }

        table th small {
            margin-left: 6px;
            font-size: 0.8em;
            opacity: 0.8;
        }

        .pagination {
            display: flex;
            justify-content: space-between;
            /* Bal – Közép – Jobb */
            align-items: center;
            margin-top: 2rem;
            padding: 1rem 0;
        }

        .pagination li {
            list-style: none;
        }

        .pagination a,
        .pagination span {
            background: rgba(229, 71, 75, 0.15);
            padding: 10px 22px;
            border-radius: 10px;
            font-weight: 600;
            color: white;
            text-decoration: none;
            transition: 0.2s ease;
        }

        .pagination a:hover {
            background: var(--accent);
            transform: translateY(-2px);
        }

        .pagination .disabled {
            opacity: 0.4;
            cursor: default;
        }

        .pagination .page.active {
            background: var(--accent);
            pointer-events: none;
        }

        @media (max-width: 768px) {
            .tabla-valaszto select {
                min-width: 90%;
                font-size: 1.3rem;
                padding: 14px 20px;
            }

            .tabla-info h2 {
                font-size: 1.8rem;
            }
        }

        span.title {
            display: none !important;
        }
    </style>
    <%- include('partials/head', { 
    title: "Üzenetek – Magyarország Atlasz" 
}) %>
</head>

<body class="is-preload">

    <div id="page-wrapper">

        <%- include('partials/header') %>

            <!-- Main -->
            <div id="main">
                <div class="inner">

                    <!-- Tábla választó -->
                    <div class="tabla-valaszto">
                        <form method="GET">
                            <select name="tabla" onchange="this.form.submit()">
                                <option value="varos" <%=tabla==='varos' ? 'selected' : '' %>>Városok</option>
                                <option value="megye" <%=tabla==='megye' ? 'selected' : '' %>>Megyék</option>
                                <option value="lelekszam" <%=tabla==='lelekszam' ? 'selected' : '' %>>Lakossági adatok
                                </option>
                            </select>
                        </form>
                    </div>

                    <!-- Tábla info -->
                    <div class="tabla-info">
                        <h2>
                            <%= tabla ? tabla.charAt(0).toUpperCase() + tabla.slice(1) : 'Város' %> tábla
                        </h2>
                        <div class="page-info">
                            Oldal <strong>
                                <%= page || 1 %>
                            </strong> / <%= totalPages || 1 %> •
                                <strong>
                                    <%= adatok ? adatok.length : 0 %>
                                </strong> sor látható
                        </div>
                    </div>

                    <!-- Tábla -->
                    <div class="table-wrapper">
                        <table>
                            <thead>
                                <tr>
                                    <% Object.keys(adatok[0] || {}).forEach(col=> { %>
                                        <th onclick="sort('<%= col %>')">
                                            <%= col.replace(/_/g, ' ' ).toUpperCase() %>
                                                <% if (sort===col) { %>
                                                    <small>
                                                        <%= order==='ASC' ? '↑' : '↓' %>
                                                    </small>
                                                    <% } else { %>
                                                        <small style="opacity:0.3">↕</small>
                                                        <% } %>
                                        </th>
                                        <% }) %>
                                </tr>
                            </thead>
                            <tbody>
                                <% adatok.forEach(row=> { %>
                                    <tr>
                                        <% Object.values(row).forEach(val=> { %>
                                            <td>
                                                <%= val===null ? '–' : val %>
                                            </td>
                                            <% }) %>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Lapozás -->
                    <ul class="pagination">

                        <!-- Előző -->
                        <li>
                            <% if (page> 1) { %>
                                <a
                                    href="?tabla=<%= tabla %>&page=<%= page - 1 %>&sort=<%= sort %>&order=<%= order %>">Előző</a>
                                <% } else { %>
                                    <span class="disabled">Előző</span>
                                    <% } %>
                        </li>

                        <!-- Aktuális oldal -->
                        <li><a href="#" class="page active">
                                <%= page %>
                            </a></li>

                        <!-- Következő -->
                        <li>
                            <% if (page < totalPages) { %>
                                <a
                                    href="?tabla=<%= tabla %>&page=<%= page + 1 %>&sort=<%= sort %>&order=<%= order %>">Következő</a>
                                <% } else { %>
                                    <span class="disabled">Következő</span>
                                    <% } %>
                        </li>

                    </ul>

                </div>

            </div>

            <!-- Scripts -->

            <script>
                function sort(col) {
                    const url = new URL(window.location);
                    const currentSort = url.searchParams.get('sort');
                    const currentOrder = (url.searchParams.get('order') || 'ASC').toUpperCase();

                    let newOrder = 'ASC';
                    if (currentSort === col && currentOrder === 'ASC') {
                        newOrder = 'DESC';
                    }

                    url.searchParams.set('sort', col);
                    url.searchParams.set('order', newOrder);
                    url.searchParams.set('page', '1');
                    window.location = url.toString();
                }
            </script>

</body>

</html>