<!DOCTYPE HTML>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Kapcsolat – Magyarország Atlasz</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="/landed/assets/css/main.css" />
    <noscript><link rel="stylesheet" href="/landed/assets/css/noscript.css" /></noscript>

    <style>
        :root { --accent: #e5474b; }

        /* Remove vertical centering, let content flow naturally */
        #main {
            padding: 4rem 1rem 6rem; /* space below header */
        }

        .tabla-info h2 {
            text-align: center;
            color: white;
            font-size: 2.2rem;
            margin-bottom: 2rem;
        }

        .card {
            background: rgba(0,0,0,0.6);
            border: none;
            border-radius: 16px;
            padding: 2rem;
            width: 100%;
            max-width: 800px; /* reasonable width for large screens */
            margin: 0 auto 3rem; /* center horizontally, add bottom margin */
            box-shadow: 0 10px 30px rgba(229,71,75,0.2);
        }

        .form-control:focus {
            border-color: var(--accent);
            box-shadow: 0 0 0 0.2rem rgba(229,71,75,0.25);
        }

        .btn-primary {
            background: var(--accent);
            border-color: var(--accent);
            transition: 0.3s;
        }
        .btn-primary:hover {
            background: #c63a3f;
            border-color: #c63a3f;
        }

        @media (max-width: 1024px) {
            .card { max-width: 90%; padding: 1.8rem; }
        }

        @media (max-width: 768px) {
            .tabla-info h2 { font-size: 1.8rem; }
            .card { padding: 1.5rem; }
        }

        /* hide auto-generated title span if present */
        span.title { display: none !important; }
    </style>
</head>
<body class="is-preload">

<div id="page-wrapper">

    <!-- Header include -->
    <%- include('partials/header') %>

    <!-- Main -->
    <div id="main">
        <div class="inner">

            <!-- Page title -->
            <div class="tabla-info">
                <h2>Kapcsolat</h2>
            </div>

            <!-- Contact Form -->
            <div class="card shadow-sm">
                <form action="/contact" method="POST" class="needs-validation" novalidate>

                    <div class="mb-3">
                        <label class="form-label">Név</label>
                        <input type="text" class="form-control" name="nev" required minlength="10">
                        <div class="invalid-feedback">A név legalább 10 karakter legyen!</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" name="email" required>
                        <div class="invalid-feedback">Érvényes email címet adj meg!</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Város</label>
                        <input type="text" class="form-control" name="varos" required>
                        <div class="invalid-feedback">Kérlek add meg a várost!</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Kor</label>
                        <input type="number" class="form-control" name="kor" required min="1" max="120">
                        <div class="invalid-feedback">Add meg az életkorod (1-120)!</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Üzenet</label>
                        <textarea name="uzenet" class="form-control" rows="4" required minlength="10"></textarea>
                        <div class="invalid-feedback">Az üzenet legalább 10 karakter legyen!</div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Küldés</button>
                </form>
            </div>

        </div>
    </div>

</div>

<script>
  // Client-side validation
  (function () {
    'use strict'
    const forms = document.querySelectorAll('.needs-validation')
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }
        form.classList.add('was-validated')
      }, false)
    })
  })()
</script>

</body>
</html>
