<!DOCTYPE html>
<html lang="hu">
<head>
  <meta charset="UTF-8">
  <title>Új város létrehozása</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="mb-4 text-center">Új város létrehozása</h2>

          <form action="/crud/create" method="POST" class="needs-validation" novalidate>

            <!-- ID mező -->
            <div class="mb-3">
              <label class="form-label">ID (egyedi, 371-től)</label>
              <input type="number" class="form-control" name="id" required min="371">
              <div class="invalid-feedback">Adj meg egy egyedi számot 371-től!</div>
            </div>

            <!-- Név -->
            <div class="mb-3">
              <label class="form-label">Város neve</label>
              <input type="text" class="form-control" name="nev" required>
              <div class="invalid-feedback">Add meg a város nevét!</div>
            </div>

            <!-- Megye legördülő -->
            <div class="mb-3">
              <label class="form-label">Megye</label>
              <select name="megyeid" class="form-control" required>
                <% megyek.forEach(megye => { %>
                  <option value="<%= megye.id %>"><%= megye.nev %></option>
                <% }) %>
              </select>
              <div class="invalid-feedback">Válassz egy megyét!</div>
            </div>

            <!-- Megyeszékhely -->
            <div class="mb-3">
              <label class="form-label">Megyeszékhely</label>
              <select name="megyeszekhely" class="form-control" required>
                <option value="0">Nem</option>
                <option value="1">Igen</option>
              </select>
            </div>

            <!-- Megyei jogú -->
            <div class="mb-3">
              <label class="form-label">Megyei jogú város</label>
              <select name="megyeijogu" class="form-control" required>
                <option value="0">Nem</option>
                <option value="1">Igen</option>
              </select>
            </div>

            <button type="submit" class="btn btn-primary w-100">Mentés</button>
            <a href="/crud" class="btn btn-secondary w-100 mt-2">Vissza a listához</a>

          </form>
        </div>
      </div>

    </div>
  </div>
</div>

<script>
(function () {
  'use strict'
  const forms = document.querySelectorAll('.needs-validation')
  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault()
        event.stopPropagation()
      }
      form.classList.add('was-validated')
    }, false)
  })
})();
</script>

</body>
</html>
