<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Üzenetek</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container py-5">
    <h2 class="mb-4">Üzenetek</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Név</th>
                <th>Email</th>
                <th>Város</th>
                <th>Kor</th>
                <th>Üzenet</th>
                <th>Beküldve</th>
            </tr>
        </thead>
        <tbody>
            <% messages.forEach(msg => { %>
                <tr>
                    <td><%= msg.nev %></td>
                    <td><%= msg.email %></td>
                    <td><%= msg.varos %></td>
                    <td><%= msg.kor %></td>
                    <td><%= msg.uzenet %></td>
                    <td><%= msg.created_at.toLocaleString() %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

</body>
</html>
